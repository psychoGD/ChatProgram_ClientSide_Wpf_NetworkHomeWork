<UserControl x:Class="ChatProgram_ClientSide_Wpf.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatProgram_ClientSide_Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Height="100" Width="400" Background="Gray" >
            <TextBox Width="200" Text="{Binding Username,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Width="200" Click="Button_Click" Height="20" Content="Login"></Button>
        </StackPanel>
    </Grid>
</UserControl>
